@model FootBallWeb.Models.Team

@{
    ViewBag.Title = Model.TeamId == 0 ? "Thêm câu lạc bộ" : "Cập nhật câu lạc bộ";
    var content = Model.TeamId == 0 ? "Thêm câu lạc bộ" : "Cập nhật câu lạc bộ";
}

<h2>@content</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="TeamId" />
    <div class="form-group">
        <label>Tên</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Quốc gia</label>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="form-group">
        <label>Thành phố</label>
        <input asp-for="city" class="form-control" />
    </div>

    <div class="form-group">
        <label>Sân vận động</label>
        <input asp-for="stadium" class="form-control" />
    </div>
    <div class="form-group">
        <label>Giới thiệu</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>Logo (URL)</label>
        <input asp-for="LogoUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Quay lại</a>
</form>
