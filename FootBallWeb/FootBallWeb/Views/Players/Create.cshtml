@model FootBallWeb.Models.Player

@{
    ViewBag.Title = "Thêm cầu thủ";
    //var teams = ViewBag.Teams as List<FootBallWeb.Models.Team>;
}

<h2>Thêm cầu thủ</h2>
@if (!string.IsNullOrEmpty(ViewBag.DuplicateMessage as string))
{
    <div class="alert alert-danger">
        @ViewBag.DuplicateMessage
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Tên</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tuổi</label>
        <input asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <label>Vị trí</label>
        <input asp-for="Position" class="form-control" />
    </div>

    <div class="form-group">
        <label>Quốc tịch</label>
        <input asp-for="Nationality" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ảnh (URL)</label>
        <input asp-for="PhotoUrl" class="form-control" />
    </div>

    <div class="form-group">
        <label>Đội bóng</label>
        <select asp-for="TeamId" asp-items="ViewBag.Teams" class="form-control">
            <option value="">-- Chọn đội bóng --</option>
        </select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-2">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Quay lại</a>
</form>
<form asp-controller="Players" asp-action="CallAPI" method="get" class="mt-3">
    <div class="form-group">
        <label>Nhập tên cầu thủ để lấy từ API</label>
        <input type="text" name="name" class="form-control" placeholder="Ví dụ: Messi" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Thêm cầu thủ (API)</button>
</form>
