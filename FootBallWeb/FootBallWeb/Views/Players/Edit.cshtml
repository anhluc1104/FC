@model FootBallWeb.Models.Player
@{
    ViewBag.Title = "Sửa thông tin cầu thủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa cầu thủ</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PlayerId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nationality"></label>
        <input asp-for="Nationality" class="form-control" />
        <span asp-validation-for="Nationality" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhotoUrl"></label>
        <input asp-for="PhotoUrl" class="form-control" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>
    <!-- Vị trí, tuổi, quốc tịch, ảnh tương tự -->

    <div class="form-group">
        <label asp-for="TeamId"></label>
        <select asp-for="TeamId" asp-items="ViewBag.Teams" class="form-control">
            <option value="">-- Chọn đội bóng --</option>
        </select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
